generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int                   @id @default(autoincrement())
  name                 String
  loginId              String                @unique
  password             String
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  nicoSearchConditions NicoSearchCondition[] @relation("nicoSearchConditions")
  NicoVideos           NicoVideo[]
}

model NicoSearchCondition {
  id           Int      @id @default(autoincrement())
  q            String
  limit        Int
  minimumViews Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       Int
  user         User     @relation("nicoSearchConditions", fields: [userId], references: [id])
}

model NicoVideo {
  userId         Int
  contentId      String
  title          String
  lengthSeconds  Int
  likeCounter    Int
  startTime      DateTime
  thumbnailUrl   String
  viewCounter    Int
  commentCounter Int
  mylistCounter  Int
  tags           String
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id])

  @@unique([contentId, userId], name: "NicoVideo_PK")
}

model Memo {
  id        Int      @id @default(autoincrement())
  userId    Int
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
